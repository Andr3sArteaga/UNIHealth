{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@services/*": ["src/services/*"],
      "@context/*": ["src/context/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
